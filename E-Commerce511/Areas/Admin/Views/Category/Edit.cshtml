<div class="container my-3">
    <div class="row">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1>Edit Product</h1>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <form action="/Admin/Category/SaveEdit">
                <input type="hidden" class="form-control" name="catgeoryId" value="@Model.Id">

                <div class="mb-3">
                    <label for="Name" class="form-label">Catgegory Name</label>
                    <input type="text" class="form-control" id="Name" name="categoryName" value="@Model.Name">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
